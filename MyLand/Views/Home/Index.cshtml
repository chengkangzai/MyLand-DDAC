@using MyLand.Services
@model IEnumerable<MyLand.Models.Property>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder text-white mb-2">
                        Choose us to be your best partner to seel your property or land!
                    </h1>
                    <p class="lead fw-normal text-white-50 mb-4">
                        We are a team of dedicated realtors who are dedicated to providing the best realtors service to our clients. We are here to help you find the best realtor for you.
                    </p>
                </div>
            </div>
            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center">
                <img class="img-fluid rounded-3 my-5" src="~/hero.png" alt="Hero image"/>
            </div>
        </div>
    </div>
</header>
<!-- Features section-->
<section class="py-5" id="features">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0">
                <h2 class="fw-bolder mb-0">A better way to show you property!</h2>
            </div>
            <div class="col-lg-8">
                <div class="row gx-5 row-cols-1 row-cols-md-2">
                    <div class="col mb-5 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                            <i class="bi bi-collection"></i>
                        </div>
                        <h2 class="h5">Ease of use</h2>
                        <p class="mb-0"> Our System is easy to use and easy to use for you. </p>
                    </div>
                    <div class="col mb-5 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                            <i class="bi bi-building"></i>
                        </div>
                        <h2 class="h5">Various partners</h2>
                        <p class="mb-0">We are one of the most trusted realtors in the country. </p>
                    </div>
                    <div class="col mb-5 mb-md-0 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                            <i class="bi bi-bank"></i>
                        </div>
                        <h2 class="h5">We are connected with banks</h2>
                        <p class="mb-0">We are connected with banks and therefore you can pay your property easily. </p>
                    </div>
                    <div class="col h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                            <i class="bi bi-camera"></i>
                        </div>
                        <h2 class="h5">High Definition Image</h2>
                        <p class="mb-0">Our system supports high definition image so you can show your property in the best way. </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 bg-light">
    <div class="container px-5 my-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="text-center">
                    <h2 class="fw-bolder">Some of our properties</h2>
                    <p class="lead fw-normal text-muted mb-5">
                        We are one of the most trusted realtors in the country. We are here to help you find the best realtor for you.
                    </p>
                </div>
            </div>
        </div>
        <div class="row gx-5">
            @foreach (var item in Model)
            {
                var imageUrl = AWSHelper.getCloudFrontUrl() + "images/" + item.Photo;
                <div class="col-lg-4 mb-5">
                    <div class="card h-100 shadow border-0">
                        <img class="card-img-top" src="@imageUrl" alt="..." width="600" height="350"/>
                        <div class="card-body p-4">
                            <div class="badge bg-primary bg-gradient rounded-pill mb-2">@item.Type</div>
                            <a class="text-decoration-none link-dark stretched-link" href="#!">
                                <h5 class="card-title mb-3">@item.Title</h5>
                            </a>
                            <p class="card-text mb-0">@item.Description</p>
                        </div>
                        <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                            <div class="d-flex align-items-end justify-content-between">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle me-3" src="https://ui-avatars.com/api/?name=@item.User.FirstName@item.User.LastName&background=random&size=40" alt="..."/>
                                    <div class="small">
                                        <div class="fw-bold">@item.User.FirstName @item.User.LastName</div>
                                        <div class="text-muted">@item.Size m<sup>2</sup> &middot; RM @item.Price</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>