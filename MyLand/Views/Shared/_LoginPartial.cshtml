@using Microsoft.AspNetCore.Identity
@using MyLand.Areas.Identity.Data

@inject SignInManager<MyLandUser> SignInManager
@inject UserManager<MyLandUser> UserManager
@{
    var role = "Guest";
    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            if (user.Role == MyLandUser.ROLE_MODERATOR)
            {
                role = "Moderator";
            }
            if (user.Role == MyLandUser.ROLE_CUSTOMER)
            {
                role = "Customer";
            }
        }
    }
}

<ul class="navbar-nav">
    @if (role == "Agent")
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="Manage">My Properties</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    @if (role == "Moderator")
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="Moderate">Moderate Properties</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Moderate Users</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    @if (role == "Customer")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Properties" asp-action="Moderate">Moderate Properties</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Moderate Users</a>
            </li>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
    @if (role == "Guest")
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>