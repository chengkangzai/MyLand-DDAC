@model IEnumerable<MyLand.Models.Listing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>
            <img style="width:100px; height:100px;" src="/imgs/img.png"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
        <form asp-action="Details" asp-route-id="@item.UserName">
            <input type="submit" value="Details" class="btn btn-primary" />
        </form>
        </td>
    </tr>  
    }
    </tbody>
</table>
